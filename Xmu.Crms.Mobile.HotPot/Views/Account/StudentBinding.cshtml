<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Student Binding</title>
    <link href="~/css/StudentBindingUI.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap -->
</head>

<body class="body">
    <div class="PictureDiv">
        <!-- 背景图的div -->
        <img class="bulb" src="~/images/bulb.png" />
        <img src="~/images/background.jpg" class="Picture" />
        <div class="title">请先绑定您的账号</div>
    </div>
    <div class="hrDiv"></div>
    <div class="mainView">
        <div class="studentID" >学号 :</div>
        <input class="inputstudentID" id="number">
        <img class="tipIcon" src="~/images/warning.png
		">
        <div class="tipFont">提交后不能修改</div>
        <div class="Name" >姓名 :</div>
        <input class="inputName"id="name" >
        <div class="school">
            学校 :
        </div>
        <input class="inputSchool" id="school"><img class="selectSchoolIcon" src="~/images/ninedot.png" id="selectSchool" onclick="" >
        <div class="comfirmDiv">
            <button class="confirmButton" id="studentBinding">绑定</button>
        </div>
    </div>

    <script>
        var number = getQuery()['number'];
        var name = getQuery()['name'];
        var school = getQuery()['school'];
        var schoolId = getQuery()['schoolId'];

        window.onload = function () {
            if (typeof (number) == 'undefined' || typeof (name) == 'undefined' ||
                typeof (school) == 'undefined' || typeof (schoolId) == 'undefined') {

            } else {
                var numberInput = document.getElementById("number");
                numberInput.value = number;
                if (numberInput.value == "")
                    numberInput.placeholder = "请输入内容";

                var nameInput = document.getElementById("name");
                nameInput.value = name;
                if (nameInput.value == "")
                    nameInput.value = "";

                var schoolInput = document.getElementById("school");
                schoolInput.value = decodeURI(school);
                if (schoolInput.value == "")
                    schoolInput.value = "";
            }
        }
        $("#selectSchool").click(function () {
            location.href = '/Register/ChooseSchool?number=' + $("#number").val() + '&name=' + $("#name").val() + '&type=Student';
        })
        $("#teacherBinding").click(function () {
            var number = $("#number").val();
            var name = $("#name").val();
            var school = $("#schoool").val();
            var token = window.localStorage.getItem("jwt");
            if (number == '' || name == '' || school == '') {
                alert("请填写完整");
            } else {
                $.ajax({
                    url: '/me',
                    type: 'PUT',
                    contentType: 'application/json',
                    dateType: 'json',
                    headers: { "Authorization": "Bearer " + token },
                    data: JSON.stringify({
                        number: number,
                        name: name,
                        schoolId: schoolId
                    }),
                    dateType: 'json',
                    success: function (data) {
                        document.location.href = '/Student';
                    },
                    error: function (error) {
                        alert(error.responseJSON.msg);
                    }
                });
            }
        });
    </script>


	
</body>
</html>


